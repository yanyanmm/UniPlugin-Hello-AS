<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="fs_AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizags_dialogtions related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="fs_AppTheme" parent="fs_AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="fs_gs_both_match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="fs_gs_both_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fs_gs_width_match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fs_gs_height_match_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="fs_gs_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="fs_gs_DialogText">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="fs_gs_DialogText.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fs_gs_receive_float_right_img" parent="@style/fs_gs_both_wrap_content">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/fs_gs_cycle_gray_bg</item>
        <item name="android:scaleType">center</item>
        <item name="android:visibility">visible</item>
    </style>
    <style name="fs_gs_receive_float_bottom_img" parent="@style/fs_gs_both_wrap_content">
        <item name="android:background">@drawable/fs_gs_cycle_gray_bg</item>
        <item name="android:scaleType">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="fs_gs_Dialog_Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="fs_Custom_Progress" parent="@android:style/Theme.Dialog">
        <!-- 无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!--无遮罩效果-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="fs_gs_right_btn_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/fs_gs_cycle_gray_bg</item>
    </style>

    <style name="fs_gs_bottom_btn_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:background">@drawable/fs_gs_cycle_gray_bg</item>
    </style>

    <style name="fs_gs_reward_fixed_btn_style" >
        <item name="android:layout_width">@dimen/fs_gs_reward_btn_width</item>
        <item name="android:layout_height">@dimen/fs_gs_reward_btn_height</item>
        <item name="android:background">@drawable/fs_gs_selector_sponsor_sum</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/fs_gs_selector_sponsor_sum_textcolor</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="fs_tab_item_style" parent="@style/fs_gs_both_wrap_content">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/fs_gs_tab_white</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="fs_pop_more_item_ly" parent="@style/fs_gs_width_match_parent">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="fs_pop_more_style_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:drawablePadding">@dimen/fs_pop_more_tv_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/fs_pop_more_text</item>
        <item name="android:textSize">@dimen/fs_pop_more_tv_size</item>
        <item name="android:background">@drawable/fs_selector_pop_more_tv</item>
        <item name="android:paddingLeft">@dimen/fs_pop_more_tv_padding</item>
        <item name="android:paddingRight">@dimen/fs_pop_more_tv_padding</item>
    </style>

    <style name="fs_pop_quality_style_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/fs_pop_more_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/fs_selector_pop_more_tv</item>
    </style>

    <style name="fs_qa_tv" parent="@style/fs_gs_width_match_parent">
        <item name="android:textSize">@dimen/fs_qa_item_content</item>
        <item name="android:textColor">@color/fs_qa_item_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="fs_private_chat_tv" parent="@style/fs_gs_both_wrap_content">
        <item name="android:textSize">@dimen/fs_private_to_name</item>
        <item name="android:textColor">@color/fs_private_time</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="fs_private_chat_time_tv" parent="@style/fs_gs_width_match_parent">
        <item name="android:textSize">@dimen/fs_private_time</item>
        <item name="android:textColor">@color/fs_private_time</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="fs_private_chat_content_tv" parent="@style/fs_gs_both_wrap_content">
        <item name="android:textSize">@dimen/fs_private_content</item>
        <item name="android:textColor">@color/fs_private_content</item>
        <item name="android:paddingLeft">@dimen/fs_private_content_paddingLeft</item>
        <item name="android:paddingRight">@dimen/fs_private_content_paddingLeft</item>
        <item name="android:paddingTop">@dimen/fs_private_content_paddingLeft</item>
        <item name="android:paddingBottom">@dimen/fs_private_content_paddingLeft</item>
    </style>

    <style name="fs_reward_empty_view">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="fs_reward_empty_view_land">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">1px</item>
    </style>
    <style name="fs_gs_reward_fixed_btn_land_style" >
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">@dimen/fs_gs_reward_btn_height</item>
        <item name="android:background">@drawable/fs_gs_selector_sponsor_sum</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/fs_gs_selector_sponsor_sum_textcolor</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="fs_fullscreen_samll_style" parent="@style/fs_gs_both_wrap_content">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">@dimen/fs_fullscreen_small_left</item>
        <item name="android:layout_marginBottom">@dimen/fs_fullscreen_small_bottom</item>
    </style>

    <style name="fs_chapter_tv" parent="@style/fs_gs_width_match_parent">
        <item name="android:textColor">@color/fs_chapter_title_tip</item>
        <item name="android:textSize">@dimen/fs_chapter_item_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
