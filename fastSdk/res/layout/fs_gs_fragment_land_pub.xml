<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gensee.fastsdk.ui.portrait.PublishFragment">

    <include layout="@layout/fs_gs_publish_video_layout" />

    <include layout="@layout/fs_gs_publish_top_layout" />

    <!--danmaku-->
    <RelativeLayout
        android:id="@+id/gs_ly_danmakuView"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <master.flame.danmaku.ui.widget.DanmakuSurfaceView
            android:id="@+id/gs_danmukuView"
            android:background="@color/fs_gs_transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right">
        <include layout="@layout/fs_gs_pub_land_btns_layout" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/gs_iv_close_chat"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        style="@style/fs_gs_bottom_btn_style"
        android:src="@drawable/fs_gs_ic_close_chat"/>
    <ImageView
        android:id="@+id/gs_iv_chat"
        android:layout_toRightOf="@id/gs_iv_close_chat"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        style="@style/fs_gs_bottom_btn_style"
        android:src="@drawable/fs_gs_ic_start_chat"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="60dp"
        android:gravity="bottom|left">
        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content">
            <com.gensee.fastsdk.ui.view.xlistview.XListView
                android:id="@+id/gs_chat_lv"
                android:layout_marginLeft="10dp"
                style="@style/fs_gs_both_wrap_content"
                android:scrollbars="none"
                android:cacheColorHint="@android:color/transparent"
                android:divider="@android:color/transparent"
                android:dividerHeight="5dp"
                android:listSelector="@android:color/transparent">
            </com.gensee.fastsdk.ui.view.xlistview.XListView>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/gs_ly_user_operate"
            android:visibility="gone"
            layout="@layout/fs_gs_user_operate_layout" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gs_ly_have_an_as_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fs_gs_as_is_on"
            android:textColor="@color/fs_gs_white"
            android:textSize="14sp"
            android:shadowColor="@color/fs_gs_black"
            android:shadowRadius="1"/>
        <TextView
            android:id="@+id/gs_tv_stop_as"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/fs_gs_end"
            android:textColor="#e43e36"
            android:textSize="18sp"
            android:shadowColor="@color/fs_gs_black"
            android:shadowRadius="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gs_idc_ly"
        style="@style/fs_gs_both_match_parent"
        android:background="@color/fs_gs_other_color_pop"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >
        <include
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            layout="@layout/fs_gs_land_idc_layout" />
    </LinearLayout>

    <Button
        android:id="@+id/gs_btn_start_live"
        android:layout_width="123dp"
        android:layout_height="41dp"
        android:background="@drawable/fs_gs_join_btn"
        android:text="@string/fs_gs_start_live"
        android:visibility="gone"
        android:textColor="@color/fs_gs_white"
        android:textSize="15sp"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/gs_ly_counter_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fs_gs_as_video_active"
            android:textColor="@color/fs_gs_white"
            android:textSize="14sp"
            android:shadowColor="@color/fs_gs_black"
            android:shadowRadius="1"/>
        <TextView
            android:id="@+id/gs_tv_counter_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fs_gs_white"
            android:textSize="140sp"
            android:shadowColor="@color/fs_gs_black"
            android:shadowRadius="1"/>
    </LinearLayout>

    <include layout="@layout/fs_gs_tip_board_layout" />

</RelativeLayout>
