<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="60dp"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/gs_iv_medal"
        android:layout_marginLeft="15dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/fs_gs_ic_rank_gold"/>
    <TextView
        android:id="@+id/gs_tv_rank"
        android:layout_marginLeft="15dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:paddingBottom="3dp"
        android:gravity="bottom|center_horizontal"
        android:text="1"
        android:textSize="9sp"
        android:textColor="#cfac35"/>
    <TextView
        android:id="@+id/gs_tv_tip_name"
        android:layout_toRightOf="@id/gs_iv_medal"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/fs_gs_tip_item_text"
        android:textColor="@color/fs_gs_tip_board_text_color" />
    <TextView
        android:id="@+id/gs_tv_tip_mount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/fs_gs_ic_rmb"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="0.00"
        android:textSize="@dimen/fs_gs_tip_item_text"
        android:textColor="@color/fs_gs_tip_board_text_color"/>
</RelativeLayout>