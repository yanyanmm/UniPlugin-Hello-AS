<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 设置背景色图像资源 -->
    <!--
<item                  
    android:id="@android:id/background"                
    android:drawable="@drawable/fs_vote_result_gray" />


    -->

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="0"
                android:centerColor="#fff4f4f4"
                android:endColor="#fff4f4f4"
                android:startColor="#fff4f4f4" />
        </shape>
    </item>

    <!-- 设置进度条颜色图像资源 -->
    <!--
<item                  
    android:id="@android:id/progress"                
    android:drawable="@drawable/fs_vote_result_red" />


    -->

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="0"
                    android:centerColor="#ffff7a72"
                    android:endColor="#ffff7a72"
                    android:startColor="#ffff7a72" />
            </shape>
        </clip>
    </item>

</layer-list>