<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_result_item_ly"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/card_result_success_iv"
        style="@style/fs_gs_both_wrap_content"
        android:layout_marginRight="6dp"
        android:background="@drawable/fs_vote_answer_success" />

    <TextView
        android:id="@+id/card_result_options_tv"
        style="@style/fs_gs_both_wrap_content"
        android:layout_marginRight="@dimen/fs_card_progredd_hor"
        android:textColor="#333333"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/card_result_options_iv"
        style="@style/fs_gs_both_wrap_content"
        android:layout_width="15dp"
        android:layout_height="12dp"
        android:layout_marginRight="@dimen/fs_card_progredd_hor"
        android:background="@drawable/fs_selector_card_optoins_iv"
        android:visibility="gone" />

    <com.gensee.view.VoteProgressBar
        android:id="@+id/card_result_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/fs_vote_progress_style_red" />

    <TextView
        android:id="@+id/card_result_count_tv"
        style="@style/fs_gs_both_wrap_content"
        android:layout_width="50dp"
        android:layout_marginLeft="@dimen/fs_card_progredd_hor"
        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="10sp" />

</LinearLayout>