<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:gravity="bottom|right">
    <LinearLayout
        android:id="@+id/gs_ly_btns_first_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gs_iv_beauty"
            style="@style/fs_gs_bottom_btn_style"
            android:src="@drawable/fs_gs_selector_btn_beauty"/>
        <ImageView
            android:id="@+id/gs_iv_switch"
            style="@style/fs_gs_bottom_btn_style"
            android:visibility="gone"
            android:src="@drawable/fs_gs_camera_switch"/>
        <ImageView
            android:id="@+id/gs_iv_mic"
            style="@style/fs_gs_bottom_btn_style"
            android:src="@drawable/fs_gs_selector_btn_mic"/>
        <!--<ImageView-->
            <!--android:id="@+id/gs_iv_chat"-->
            <!--style="@style/fs_gs_bottom_btn_style"-->
            <!--android:src="@drawable/fs_gs_ic_start_chat"/>-->
        <ImageView
            android:id="@+id/gs_iv_more"
            style="@style/fs_gs_bottom_btn_style"
            android:src="@drawable/fs_gs_ic_more"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gs_ly_btns_second_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/gs_iv_change_line_land"
            style="@style/fs_gs_bottom_btn_style"
            android:src="@drawable/fs_gs_ic_change_line"/>
        <ImageView
            android:id="@+id/gs_iv_report_bug"
            style="@style/fs_gs_bottom_btn_style"
            android:src="@drawable/fs_gs_ic_report_bug"/>
        <ImageView
            android:id="@+id/gs_iv_less"
            style="@style/fs_gs_bottom_btn_style"
            android:src="@drawable/fs_gs_ic_to_right_arrow"/>
    </LinearLayout>
</RelativeLayout>