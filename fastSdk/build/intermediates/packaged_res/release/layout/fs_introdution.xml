<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/ll_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_introdution_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fs_introdution_intro"
                android:textColor="@color/fs_tv_introdution_title_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_introdution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/fs_tv_introdution_color"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_introdution_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/fs_tv_introdution_line_color" />

            <TextView
                android:id="@+id/tv_plan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fs_introdution_plan_title"
                android:textColor="@color/fs_tv_introdution_title_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/fs_tv_introdution_color"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_speaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_introdution_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/fs_tv_introdution_line_color" />

            <TextView
                android:id="@+id/tv_speaker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fs_introdution_speaker_title"
                android:textColor="@color/fs_tv_introdution_title_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_speaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/fs_tv_introdution_color"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
