<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/fs_vod_speed_rate_pop"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/speed_rate20_ly"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/speed_rate20_iv"
            android:layout_width="wrap_content"
            android:background="@drawable/fs_selector_speed_rate20_iv"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/speed_rate15_ly"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/speed_rate15_iv"
            android:layout_width="wrap_content"
            android:background="@drawable/fs_selector_speed_rate15_iv"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/speed_rate10_ly"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/speed_rate10_iv"
            android:layout_width="wrap_content"
            android:background="@drawable/fs_selector_speed_rate10_iv"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>